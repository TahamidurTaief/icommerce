{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Django Server",
			"type": "shell",
			"command": ".\\env\\Scripts\\activate && python manage.py runserver 127.0.0.1:8000",
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			}
		},
		{
			"label": "Start Frontend Dev Server",
			"type": "shell",
			"command": "npm run dev",
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			}
		}
	]
}